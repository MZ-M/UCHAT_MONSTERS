<Window x:Class="uchat_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="uChat"
        Height="520"
        Width="820"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- === USERS PANEL === -->
        <Border Grid.Column="0"
                Padding="5"
                Margin="5"
                BorderThickness="1"
                BorderBrush="Gray">

            <DockPanel>
                <!-- Header -->
        	<TextBlock Text="Online users"
                	DockPanel.Dock="Top"
                   	FontWeight="Bold"
                   	Margin="0,0,0,5"/>

        	<!-- Button -->
        	<Button Content="All Users"
                	DockPanel.Dock="Bottom"
                	Height="28"
                	Margin="0,5,0,0"
                	Click="AllUsers_Click"/>

        	<!-- List -->
        	<ListBox x:Name="UsersList"/>
            </DockPanel>

        </Border>

        <!-- === CHAT PANEL === -->
        <Border Grid.Column="1"
                Padding="5"
                Margin="5"
                BorderThickness="1"
                BorderBrush="Gray">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat history -->
		<ListBox x:Name="ChatList"
         		SelectionChanged="ChatList_SelectionChanged"/>

                <!-- Input panel -->
                <Border Grid.Row="1"
                        Margin="0,5,0,0"
                        Padding="5"
                        BorderThickness="1"
                        BorderBrush="LightGray">

		<DockPanel Grid.Row="1">

    		        <Button Content="Send File"
            			Width="90"
            			Height="32"
            			Margin="5"
            			DockPanel.Dock="Left"
            			Click="SendFile_Click"/>

    			<Button Content="Send"
            			Width="80"
            			Height="32"
            			Margin="5"
            			DockPanel.Dock="Right"
            			Click="Send_Click"/>

			<Button Content="Edit"
        			Width="80"
        			Margin="5"
        			Click="Edit_Click"/>

			<Button Content="Delete"
        			Width="80"
        			Margin="5"
        			Click="Delete_Click"/>




    			<TextBox x:Name="InputBox"
             			Height="32"
             			Margin="5"/>

		</DockPanel>

                </Border>

            </Grid>
        </Border>
    </Grid>

</Window>