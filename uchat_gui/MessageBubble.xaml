<UserControl x:Class="uchat_gui.MessageBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="MessageBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MaxWidth" Value="400"/>
            <Setter Property="Margin" Value="8,4"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Border x:Name="MessageBorder"
                Style="{StaticResource MessageBorderStyle}">
            <StackPanel>
                <TextBlock x:Name="SenderNameText"
                          FontWeight="Bold"
                          FontSize="12"
                          Margin="0,0,0,4"/>
                
                <TextBlock x:Name="MessageTextBlock"
                          FontSize="13"
                          TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock x:Name="TimestampText"
                              FontSize="10"
                              Foreground="Gray"
                              VerticalAlignment="Bottom"/>
                    
                    <Button x:Name="OpenFileButton"
                           Content="ðŸ“‚"
                           Width="24"
                           Height="24"
                           Padding="0"
                           Margin="8,0,0,0"
                           Background="Transparent"
                           BorderThickness="0"
                           Cursor="Hand"
                           ToolTip="Open file location"
                           Click="OpenFileButton_Click"
                           Visibility="Collapsed"/>
                    
                    <StackPanel x:Name="ActionButtonsPanel"
                               Orientation="Horizontal"
                               Margin="8,0,0,0"
                               Visibility="Collapsed">
                        <Button x:Name="EditButton"
                               Content="âœï¸"
                               Width="24"
                               Height="24"
                               Padding="0"
                               Margin="4,0,0,0"
                               Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               ToolTip="Edit message"
                               Click="EditButton_Click"/>
                        <Button x:Name="DeleteButton"
                               Content="ðŸ—‘ï¸"
                               Width="24"
                               Height="24"
                               Padding="0"
                               Margin="4,0,0,0"
                               Background="Transparent"
                               BorderThickness="0"
                               Cursor="Hand"
                               ToolTip="Delete message"
                               Click="DeleteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
